<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/dp6"
    android:layout_marginVertical="@dimen/dp6">

    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="@dimen/dp103"
        android:layout_height="@dimen/dp150"
        android:contentDescription="@null"
        tools:src="@drawable/encanto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="@dimen/dp193"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/secondary"
            android:textSize="@dimen/sp22"
            tools:text="Encanto" />
        <TextView
            android:id="@+id/movie_year"
            android:layout_width="@dimen/dp130"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:textColor="@color/tertiary"
            android:textSize="@dimen/sp18"
            tools:text="2023" />
        <TextView
            android:id="@+id/movie_actors"
            android:layout_width="@dimen/dp265"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="@dimen/dp18"
            android:fontFamily="@font/roboto"
            android:textColor="@color/tertiary"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp14"
            tools:text="Alice Braga, Henry Madera" />
    </LinearLayout>

</LinearLayout>