<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="630dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    tools:context=".profileFragment">



    <LinearLayout
        android:id="@+id/container_name_and_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="40dp"
        android:gravity="center_vertical"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_image"
            app:shapeAppearance="@style/radiusImageProfile"
            />
        <TextView
            android:id="@+id/item_nameUser"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="Juan Perez"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/item_image_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_settings"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_scrollView_cards"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/container_name_and_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/tertiary_two"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerView_cards"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_cards_horizontal"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/tertiary_two"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_List_following"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_scrollView_cards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="45dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="8dp"
                android:layout_height="29dp"
                android:background="@drawable/mini_vertical_linea"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/secondary"
                android:textSize="20sp"
                android:text="Lista de seguimiento" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="45dp"
            android:paddingEnd="15dp"
            android:text="Crear una lista de seguimiento para no perderte ninguna pelicula o serie de Tv"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="45dp"
            app:layout_constraintTop_toBottomOf="@id/container_chapters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_yellow"
            android:text="Empieza tu lista de seguimiento"
            android:textAllCaps="false"
            android:textColor="@color/quaternary"
            android:fontFamily="@font/roboto_bold"
            android:textSize="19sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:background="@color/tertiary_two"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_before_view"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_List_following"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="8dp"
                android:layout_height="29dp"
                android:background="@drawable/mini_vertical_linea"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/secondary"
                android:textSize="20sp"
                android:text="Vistas recientes" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="15dp"
            android:text="No has Visitado ninguna pagina reciente."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="15dp"
            android:background="@color/tertiary_two"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_favorite_people"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_before_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="8dp"
                android:layout_height="29dp"
                android:background="@drawable/mini_vertical_linea"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/secondary"
                android:textSize="20sp"
                android:text="Personas Favoritas" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="15dp"
            android:text="Aun no has marcado a ninguna persona como favorita"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="15dp"
            android:background="@color/tertiary_two"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_other"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_favorite_people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="8dp"
                android:layout_height="29dp"
                android:background="@drawable/mini_vertical_linea"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/secondary"
                android:textSize="20sp"
                android:text="Personas Favoritas" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="15dp"
            android:text="Aun no has marcado a ninguna persona como favorita"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="15dp"
            android:background="@color/tertiary_two"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>