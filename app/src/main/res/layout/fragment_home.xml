<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="659dp"
    android:layout_marginTop="15dp"
    tools:context=".HomeFragment">


    <ImageView
        android:id="@+id/movie_video"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/video_gambit"
        />

    <ImageView
        android:id="@+id/item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        app:layout_constraintTop_toTopOf="@id/movie_video"
        app:layout_constraintEnd_toEndOf="@id/movie_video"
        app:layout_constraintStart_toStartOf="@id/movie_video"
        app:layout_constraintBottom_toBottomOf="@id/movie_video"
        />


    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/movie_video"
        android:layout_marginTop="-110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/encanto"

        />
    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_video"
        app:layout_constraintStart_toEndOf="@id/movie_img"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Stranger Things"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.2"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/quaternary"
        />
    <TextView
        android:id="@+id/txt_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        app:layout_constraintStart_toEndOf="@id/movie_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:text="Trailer Oficial"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/item_Linea"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_trailer"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/tertiary_two"
        />
    <LinearLayout
        android:id="@+id/constainer_better_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_Linea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        >
        <TextView
            android:id="@+id/figure_yellow_one"
            android:layout_width="8dp"
            android:layout_height="29dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/mini_vertical_linea"
            android:textSize="25sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/item_better_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/secondary"
            android:textSize="20sp"
            android:text="Las mejores selecciones" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerView_home"
        android:layout_width="407dp"
        android:layout_height="307dp"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_movie_horizontal"
        tools:layout_editor_absoluteY="351dp"
        app:layout_constraintTop_toBottomOf="@id/constainer_better_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>